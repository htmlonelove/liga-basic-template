    "build": "cross-env NODE_ENV=production gulp build & gulp imagemin",
    "start": "cross-env NODE_ENV=development gulp start",
    "imagemin": "gulp imagemin",
    "webp": "gulp webp"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/**/*.html",
    "source/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
