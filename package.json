    "cross-env": "7.0.3",
    "del": "6.1.1",
    "gulp": "4.0.2",
    "gulp-csso": "4.0.1",
    "gulp-file-include": "2.3.0",
    "gulp-group-css-media-queries": "1.2.2",
    "gulp-html-beautify": "1.0.1",
    "gulp-imagemin": "7.1.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "1.4.0",
